                        <form id="patientFormElement">
                            <div class="form-group"><label>Name *</label><input type="text" id="patientName" required></div>
                            <div class="form-group"><label>Age *</label><input type="number" id="patientAge" required></div>
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-danger" onclick="hidePatientForm()">Cancel</button>
                        </form>
                    </div>
                    <table class="data-table">
                        <thead><tr><th>ID</th><th>Name</th><th>Age</th><th>Actions</th></tr></thead>
                        <tbody id="patientsTable"></tbody>
                    </table>
