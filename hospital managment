    <div id="notification" class="notification"></div>

    <script>
        class HospitalManagementSystem {
            constructor() {
                this.data = {
                    patients: JSON.parse(localStorage.getItem('patients')) || [],
                    doctors: JSON.parse(localStorage.getItem('doctors')) || [
                        { id: 1, name: "Dr. Sarah Johnson", specialization: "Cardiology", fee: 200 }
                    ],
                    appointments: JSON.parse(localStorage.getItem('appointments')) || [],
                    nextPatientId: parseInt(localStorage.getItem('nextPatientId')) || 1
                };
                this.init();
            }

            init() {
                this.updateDashboard();
                this.loadPatientsTable();
                this.startClock();
            }

            save() {
                localStorage.setItem('patients', JSON.stringify(this.data.patients));
                localStorage.setItem('nextPatientId', this.data.nextPatientId.toString());
            }

            addPatient(data) {
                const patient = { id: this.data.nextPatientId++, registrationDate: new Date(), ...data };
                this.data.patients.push(patient);
                this.save();
                this.loadPatientsTable();
                this.updateDashboard();
                this.notify('Patient Added!');
            }

            loadPatientsTable() {
                const tbody = document.getElementById('patientsTable');
                tbody.innerHTML = this.data.patients.map(p => `
                    <tr>
                        <td>${p.id}</td>
                        <td>${p.name}</td>
                        <td>${p.age}</td>
                        <td><button class="btn btn-danger" onclick="hospitalSystem.deletePatient(${p.id})">Delete</button></td>
                    </tr>
                `).join('');
            }

            deletePatient(id) {
                this.data.patients = this.data.patients.filter(p => p.id !== id);
                this.save();
                this.loadPatientsTable();
                this.updateDashboard();
            }

            updateDashboard() {
                document.getElementById('totalPatients').textContent = this.data.patients.length;
                document.getElementById('totalDoctors').textContent = this.data.doctors.length;
            }

            notify(msg) {
                const n = document.getElementById('notification');
                n.textContent = msg;
                n.className = 'notification success show';
                setTimeout(() => n.classList.remove('show'), 3000);
            }

            startClock() {
                setInterval(() => {
                    document.getElementById('currentTime').textContent = new Date().toLocaleString();
                }, 1000);
            }
        }

        const hospitalSystem = new HospitalManagementSystem();

        function showTab(name) {
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
            document.getElementById(name).classList.add('active');
            event.target.classList.add('active');
        }

        function showPatientForm() { document.getElementById('patientForm').style.display = 'block'; }
        function hidePatientForm() { document.getElementById('patientForm').style.display = 'none'; }

        document.getElementById('patientFormElement').addEventListener('submit', e => {
            e.preventDefault();
            hospitalSystem.addPatient({
                name: document.getElementById('patientName').value,
                age: document.getElementById('patientAge').value
            });
            hidePatientForm();
        });
    </script>
</body>
